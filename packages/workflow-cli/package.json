{
  "name": "@workflow/cli",
  "version": "0.1.0",
  "description": "CLI tool for workflow orchestration - generate WorkflowTask CRDs from OpenAPI specs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "workflow-cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src tests",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "workflow",
    "cli",
    "openapi",
    "kubernetes",
    "crd"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "openapi-types": "^12.1.3",
    "ora": "^8.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.39.1",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.48.1",
    "vitest": "^2.1.0"
  }
}
