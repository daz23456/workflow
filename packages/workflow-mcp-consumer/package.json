{
  "name": "@workflow/mcp-consumer",
  "version": "0.1.0",
  "description": "MCP server for external workflow consumption - discover and execute workflows via chatbots",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "workflow-mcp-consumer": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "workflow",
    "mcp",
    "consumer",
    "chatbot",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^8.57.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.0"
  }
}
