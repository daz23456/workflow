{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://workflow.example.com/schemas/workflow-task.schema.json",
  "title": "WorkflowTask",
  "description": "Kubernetes Custom Resource for WorkflowTask",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "description": "API version",
      "const": "workflow.example.com/v1"
    },
    "kind": {
      "type": "string",
      "description": "Resource kind",
      "const": "WorkflowTask"
    },
    "metadata": {
      "$ref": "#/definitions/ResourceMetadata"
    },
    "spec": {
      "$ref": "#/definitions/WorkflowTaskSpec"
    },
    "status": {
      "$ref": "#/definitions/WorkflowTaskStatus"
    }
  },
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "definitions": {
    "WorkflowTaskSpec": {
      "type": "object",
      "description": "WorkflowTask specification",
      "properties": {
        "type": {
          "type": "string",
          "description": "Task type (http, transform, etc.)",
          "enum": ["http", "transform", "webhook"]
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the task"
        },
        "inputSchema": {
          "$ref": "#/definitions/SchemaDefinition"
        },
        "outputSchema": {
          "$ref": "#/definitions/SchemaDefinition"
        },
        "request": {
          "$ref": "#/definitions/HttpRequestDefinition"
        },
        "http": {
          "$ref": "#/definitions/HttpRequestDefinition"
        },
        "transform": {
          "$ref": "#/definitions/TransformDefinition"
        },
        "timeout": {
          "type": "string",
          "description": "Task timeout (e.g., 30s, 5m, 2h)",
          "pattern": "^[0-9]+(ms|s|m|h)$"
        }
      },
      "required": ["type"]
    },
    "HttpRequestDefinition": {
      "type": "object",
      "description": "HTTP request definition for fetch tasks",
      "properties": {
        "method": {
          "type": "string",
          "description": "HTTP method",
          "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
        },
        "url": {
          "type": "string",
          "description": "Request URL (supports templates)",
          "format": "uri-template"
        },
        "headers": {
          "type": "object",
          "description": "HTTP headers",
          "additionalProperties": {
            "type": "string"
          }
        },
        "body": {
          "type": "string",
          "description": "Request body (supports templates)"
        }
      },
      "required": ["method", "url"]
    },
    "TransformDefinition": {
      "type": "object",
      "description": "Transform definition for data transformation tasks",
      "properties": {
        "input": {
          "type": "string",
          "description": "JSONPath to input data"
        },
        "jsonPath": {
          "type": "string",
          "description": "JSONPath expression for transformation (legacy)"
        },
        "query": {
          "type": "string",
          "description": "Legacy: JSONPath query (deprecated)"
        },
        "pipeline": {
          "type": "array",
          "description": "Pipeline of transform operations to apply sequentially",
          "items": {
            "$ref": "#/definitions/TransformOperation"
          }
        }
      }
    },
    "TransformOperation": {
      "type": "object",
      "description": "A single transform operation in a pipeline",
      "properties": {
        "operation": {
          "type": "string",
          "description": "Operation type",
          "enum": [
            "uppercase", "lowercase", "trim", "split", "concat", "replace", "substring", "template",
            "round", "floor", "ceil", "abs", "clamp", "scale", "percentage",
            "first", "last", "nth", "reverse", "unique", "flatten", "chunk", "zip",
            "randomOne", "randomN", "shuffle"
          ]
        }
      },
      "required": ["operation"]
    },
    "WorkflowTaskStatus": {
      "type": "object",
      "description": "WorkflowTask status",
      "properties": {
        "usageCount": {
          "type": "integer",
          "description": "Number of times this task has been used",
          "minimum": 0
        },
        "lastUpdated": {
          "type": "string",
          "description": "Last update timestamp",
          "format": "date-time"
        }
      }
    },
    "ResourceMetadata": {
      "type": "object",
      "description": "Kubernetes resource metadata",
      "properties": {
        "name": {
          "type": "string",
          "description": "Resource name",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "namespace": {
          "type": "string",
          "description": "Resource namespace",
          "default": "default",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "annotations": {
          "type": "object",
          "description": "Resource annotations",
          "additionalProperties": {
            "type": "string"
          }
        },
        "labels": {
          "type": "object",
          "description": "Resource labels",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["name", "namespace"]
    },
    "SchemaDefinition": {
      "type": "object",
      "description": "JSON Schema definition for validation",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["object", "array", "string", "number", "integer", "boolean", "null"]
        },
        "properties": {
          "type": "object",
          "additionalProperties": true
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string"
        },
        "items": {
          "type": "object"
        }
      },
      "required": ["type"]
    }
  }
}
