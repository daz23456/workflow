{
  "name": "workflow-vscode-server",
  "version": "0.1.0",
  "description": "Language server for Workflow YAML files",
  "main": "./dist/server.js",
  "scripts": {
    "build": "webpack --mode production",
    "type-check": "tsc --noEmit",
    "watch": "webpack --mode development --watch",
