    "vscode-languageserver-textdocument": "^1.0.12",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.25",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"
  }
