{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "coverageAnalysis": "perTest",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 0
  },
  "reporters": ["html", "progress", "clear-text", "json"],
  "htmlReporter": {
    "baseDir": "stryker-output/html"
  },
  "jsonReporter": {
    "fileName": "stryker-output/mutation-report.json"
  },
  "mutate": [
    "components/**/*.tsx",
    "components/**/*.ts",
    "lib/**/*.ts",
    "app/**/*.tsx",
    "!**/*.test.tsx",
    "!**/*.test.ts",
    "!**/*.spec.tsx",
    "!**/*.spec.ts"
  ],
  "timeoutMS": 60000,
  "concurrency": 4,
  "ignorePatterns": [
    "dist",
    "node_modules",
    ".next",
    "coverage",
    "stryker-output"
  ]
}
